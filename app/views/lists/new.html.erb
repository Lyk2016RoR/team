<h2> Make A New List</h2>
<div role="form">
  <%= form_for @list do |f| %>

      <div class="form-group">
        <%= f.label "List Name" %><br>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.select :book_ids, @books, {include_hidden: false}, multiple: true %>
      </div>

      <%= f.submit "Make", class: "btn btn-sm btn-primary" %>
  <%end%>
</div>

<%= link_to "Go Lists", lists_path %>