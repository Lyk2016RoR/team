
  <h2> Add A New Book</h2>
<div role="form">
    <%= form_for @book do |b| %>

      <div class="form-group">
          <%= b.label :BookName %><br>
          <%= b.text_field :name , class:'form-control' %>
        </div>
        <div class="form-group">
            <%= b.label :Description %><br>
            <%= b.text_area :description , class:'form-control' %>
         </div>
         <div class="form-group">
             <%= b.label :Summary %><br>
             <%= b.text_area :summary , class:'form-control' %>
          </div>


       <div class="form-group">
         <%= b.label :Author %><br>
         <%= b.text_field :author , class:'form-control' %>
       </div>
        <div class="form-group">
           <%= b.label :Translator %><br>
           <%= b.text_field :translator, class:'form-control' %>
         </div>
         <div class="form-group">
             <%= b.label :Publisher %><br>
             <%= b.text_field :publisher , class:'form-control' %>
           </div>
           <div class="form-group">
               <%= b.label :ISBN %><br>
               <%= b.text_field :ISBN , class:'form-control' %>
             </div>
         




      <div class="form-group">
        <%= b.select :category_id, @categories %>
      </div>

      <div class="form-group">
            <%= b.label :PublishDate %><br>
            <%= b.date_select :published_at , class:'dropdown' %>
       </div>


        <div class="form-group">
            <%= b.label :book_image, class: 'col-sm-2 control-label'  %>
            <div class="col-sm-6">
                <%= b.file_field :book_image %>
            </div>
        </div>
     <br> <br>

         <div class="form-group">
           <%= b.submit :Save , class:'btn btn-primary'%>
         </div>
    <% end %>
</div>
  <%= link_to "Go Books", books_path%>
