<h4> <%= @category.name%></h4>
<%=link_to "Go Back to books", books_path%>
<br>
<% @category.books.each do |book|%>
	<div class="category_border">
	 <table class="table table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= book.id %></td>
        <td><%= link_to book.name, book_path(book) %></td>
        <td><%= book.description %></td>
      </tr>

    </tbody>
  </table>
</div>
<% end %>

