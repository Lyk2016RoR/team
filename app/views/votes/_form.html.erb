
<div class="row book">
	<div class="col-sm-offset-3">
		<%= form_for [@book, @vote] do |f| %>
		    <% 10.times do |i| %>
		        <%= f.radio_button :rating, i+1 %>
		        <% (i+1).times do %>
		            <i class='fa fa-star' style="color:white"></i>
		        <% end %>
	       		<br />
	   		<% end %>

		    <%= f.submit "Vote", class: "btn btn-sm btn-primary btnhover" %>
		<% end %>
	</div>
</div>